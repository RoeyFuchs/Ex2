<UserControl x:Class="Ex2.Views.ControlSide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
                     xmlns:views="clr-namespace:Ex2.Views"
             mc:Ignorable="d"            
             d:DesignHeight="500" d:DesignWidth="500"  >
    <DockPanel Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2">
        <TabControl DockPanel.Dock="Top" Margin="0" Height="500">
            <TabItem  Header="Menual">
                <views:MenualPilot></views:MenualPilot>
            </TabItem>
            <TabItem  Header="Auto Pilot">
                <views:AutoPilot></views:AutoPilot>
            </TabItem>
        </TabControl>
    </DockPanel>

</UserControl>